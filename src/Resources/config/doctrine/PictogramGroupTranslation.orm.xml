<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <mapped-superclass name="Asdoria\SyliusPictogramPlugin\Entity\PictogramGroupTranslation" table="asdoria_pictogram_group_translation">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="name" column="name" type="string" />
        <unique-constraints>
            <unique-constraint columns="locale,name" />
        </unique-constraints>
    </mapped-superclass>

</doctrine-mapping>
